<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_backgroud" >

    <RelativeLayout
        android:id="@+id/tab2_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_blue" >

        <RadioGroup
            android:id="@+id/tab2_base_radio_group"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/radio_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/tab2_base_radio_button1"
                style="@style/above_btn_style"
                android:layout_marginLeft="@dimen/dp_3dp"
                android:checked="true"
                android:text="@string/network_speed_test" />

            <RadioButton
                android:id="@+id/tab2_base_radio_button2"
                style="@style/above_btn_style"
                android:layout_marginRight="@dimen/dp_3dp"
                android:text="@string/speed_test_map" />
        </RadioGroup>
    </RelativeLayout>

    <com.kinth.mmspeed.ui.CustomViewPager
        android:id="@+id/tab2_base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab2_title_bar" >
    </com.kinth.mmspeed.ui.CustomViewPager>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/total_ui_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_backgroud" >

    <RelativeLayout
        android:id="@+id/tittle_bar_rlt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/base_blue" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="套餐办理"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/selector_icon_back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab2_flow_rlt2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tittle_bar_rlt"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:baselineAligned="false" >

        <com.kinth.mmspeed.ui.CheckableButton
            android:id="@+id/cb_transact_package_tab1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_left_rect"
            android:textColor="@drawable/letter_selector"
            android:textSize="15sp" />

        <com.kinth.mmspeed.ui.CheckableButton
            android:id="@+id/cb_transact_package_tab2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_middle_rect"
            android:orientation="horizontal"
            android:textColor="@drawable/letter_selector"
            android:textSize="15sp" />

        <com.kinth.mmspeed.ui.CheckableButton
            android:id="@+id/cb_transact_package_tab3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_middle_rect"
            android:orientation="horizontal"
            android:textColor="@drawable/letter_selector"
            android:textSize="15sp" />

        <com.kinth.mmspeed.ui.CheckableButton
            android:id="@+id/cb_transact_package_tab4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_right_rect"
            android:orientation="horizontal"
            android:textColor="@drawable/letter_selector"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_app_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:minHeight="30dp"
        android:textColor="@color/gray_font"
        android:textSize="@dimen/text_size_14" />

    <ListView
        android:id="@+id/tab3_package_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_app_recommend"
        android:layout_below="@id/tab2_flow_rlt2"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:divider="#00000000"
        android:background="@drawable/round_rect_transparent"
        android:dividerHeight="3dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_font"
        android:textSize="18sp"
        android:visibility="visible" />

</RelativeLayout>
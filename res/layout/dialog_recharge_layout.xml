<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8333"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp" >

    <Button
        android:id="@+id/btn_recharge_online"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialog_recharge_button_selector"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/text_recharge_online"
        android:textColor="@drawable/letter_selector"
        android:textSize="20sp" >
    </Button>

    <Button
        android:id="@+id/btn_recharge_card"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialog_recharge_button_selector"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="@string/text_recharge_card"
        android:textColor="@drawable/letter_selector"
        android:textSize="20sp" >
    </Button>

</LinearLayout>
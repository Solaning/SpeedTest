<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/toolbar_bg" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:contentDescription="@string/contentDescription"
            android:onClick="leftBtnOnClick"
            android:src="@drawable/selector_icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="流量共享套餐"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_inaugurate_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="您暂未参加流量共享套餐"
        android:textColor="@android:color/black"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border"
        android:orientation="vertical"
        android:padding="@dimen/dp_5dp" >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="价        格：0-20元/月"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="适用品牌：全球通 神州行 动感地带 TD"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:text="适用地市：广东 广州 深圳 东莞 佛山 汕头 珠海 惠州 中山 江门 韶关 河源 梅州 汕尾 湛江 肇庆 清远 云浮 潮州 揭阳 茂名 阳江"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_total_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_initiate_share"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_blue_color"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="发起共享"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_join_share"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_blue_color"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="加入共享"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_inaugurate_donation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_margin="7dp"
            android:background="@drawable/selector_blue_color"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="开通流量转赠"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
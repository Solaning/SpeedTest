<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/preview_llBottomContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/half_transparent"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/padding"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5dp"
            android:paddingLeft="@dimen/dp_8dp"
            android:paddingRight="@dimen/LargePadding"
            android:paddingTop="@dimen/dp_5dp"
            android:text="预览"
            android:textColor="@color/preview_btn_text"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/preview_llBottomContainer"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
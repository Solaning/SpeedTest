<?xml version="1.0" encoding="utf-8"?>
<com.kinth.mmspeed.ui.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rtl_moemnts_gallery_item"
    android:layout_width="match_parent"
    android:background="@drawable/item_border_gray"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/camera_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@string/contentDescription"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_icon"
        android:textSize="@dimen/text_size_16"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="拍摄照片"
        android:textColor="@android:color/white"/>

</com.kinth.mmspeed.ui.SquareLayout>